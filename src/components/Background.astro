<div class="background-container">
  <div class="grid-pattern"></div>
  <svg class="blob-svg" viewBox="0 0 1920 1080" preserveAspectRatio="xMidYMid slice">
    <defs>
      <!-- Super blur filter -->
      <filter id="superBlur" x="-100%" y="-100%" width="300%" height="300%">
        <feGaussianBlur in="SourceGraphic" stdDeviation="120" />
      </filter>
      
      <!-- Gradients -->
      <radialGradient id="blob1" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#7287fd;stop-opacity:0.3" />
        <stop offset="70%" style="stop-color:#ea76cb;stop-opacity:0.2" />
        <stop offset="100%" style="stop-color:#209fb5;stop-opacity:0.1" />
      </radialGradient>
      
      <radialGradient id="blob2" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#8839ef;stop-opacity:0.25" />
        <stop offset="70%" style="stop-color:#1e66f5;stop-opacity:0.3" />
        <stop offset="100%" style="stop-color:#ea76cb;stop-opacity:0.15" />
      </radialGradient>
      
      <radialGradient id="blob3" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#209fb5;stop-opacity:0.35" />
        <stop offset="70%" style="stop-color:#7287fd;stop-opacity:0.2" />
        <stop offset="100%" style="stop-color:#8839ef;stop-opacity:0.1" />
      </radialGradient>
      
      <radialGradient id="blob4" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#ea76cb;stop-opacity:0.3" />
        <stop offset="70%" style="stop-color:#209fb5;stop-opacity:0.25" />
        <stop offset="100%" style="stop-color:#1e66f5;stop-opacity:0.15" />
      </radialGradient>
    </defs>
    
    <!-- Large flowing blob 1 -->
    <circle cx="400" cy="300" r="350" fill="url(#blob1)" filter="url(#superBlur)">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; 200,100; 300,-50; 100,-150; -100,50; 0,0"
        dur="30s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="350; 450; 400; 500; 350"
        dur="25s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
    
    <!-- Large flowing blob 2 -->
    <circle cx="1200" cy="600" r="400" fill="url(#blob2)" filter="url(#superBlur)">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; -150,120; -250,50; -100,-80; 80,150; 0,0"
        dur="35s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="400; 500; 450; 550; 400"
        dur="28s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
    
    <!-- Medium blob 3 -->
    <circle cx="1400" cy="200" r="300" fill="url(#blob3)" filter="url(#superBlur)">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; -120,-80; -200,40; -80,120; 40,-40; 0,0"
        dur="32s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="300; 380; 340; 420; 300"
        dur="22s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
    
    <!-- Medium blob 4 -->
    <circle cx="200" cy="800" r="320" fill="url(#blob4)" filter="url(#superBlur)">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; 180,60; 250,-40; 120,-120; -60,80; 0,0"
        dur="38s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="320; 400; 360; 440; 320"
        dur="26s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
    
    <!-- Large background blob 5 -->
    <circle cx="960" cy="400" r="500" fill="url(#blob1)" filter="url(#superBlur)" opacity="0.3">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; -100,200; -200,100; -50,-100; 100,150; 0,0"
        dur="45s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="500; 600; 550; 650; 500"
        dur="35s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
    
    <!-- Accent blob 6 -->
    <circle cx="800" cy="100" r="250" fill="url(#blob3)" filter="url(#superBlur)">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; 120,150; 200,80; 80,-60; -40,100; 0,0"
        dur="28s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="250; 320; 280; 350; 250"
        dur="20s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
    
    <!-- Accent blob 7 -->
    <circle cx="1600" cy="900" r="280" fill="url(#blob2)" filter="url(#superBlur)">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; -160,80; -220,-60; -100,140; 60,-80; 0,0"
        dur="33s"
        begin="9s"
        repeatCount="indefinite"/>
      <animate
        attributeName="r"
        values="280; 360; 320; 400; 280"
        dur="24s"
        begin="9s"
        repeatCount="indefinite"/>
    </circle>
  </svg>
</div>

<style>
  .background-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    min-width: 100vw;
    min-height: 100vh;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
    background: var(--bg-primary);
  }

  .blob-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }

  /* Grid pattern */
  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at center, #282c34 1px, transparent 1px),
      radial-gradient(circle at center, #282c34 0.5px, transparent 0.5px);
    background-size: 
      40px 40px,
      80px 80px;
    background-position: 
      0 0,
      20px 20px;
    opacity: 0.7;
    z-index: 2;
    animation: gridFloat 80s linear 9s infinite;
  }

  @keyframes gridFloat {
    0% {
      transform: translate(0, 0);
      opacity: 0.7;
    }
    25% {
      opacity: 0.5;
    }
    50% {
      transform: translate(40px, 40px);
      opacity: 0.8;
    }
    75% {
      opacity: 0.6;
    }
    100% {
      transform: translate(80px, 80px);
      opacity: 0.7;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 1200px) {
    .blob-svg {
      transform: scale(1.1);
    }
  }

  @media (max-width: 768px) {
    .grid-pattern {
      background-size: 
        30px 30px,
        60px 60px;
      background-position: 
        0 0,
        15px 15px;
    }
    
    @keyframes gridFloat {
      0% {
        transform: translate(0, 0);
      }
      50% {
        transform: translate(30px, 30px);
      }
      100% {
        transform: translate(60px, 60px);
      }
    }

    .blob-svg {
      transform: scale(1.2);
    }
  }
</style>